@{
    ViewData["Title"] = "Fatura Ekle";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["error"].ToString()
                </div>
            }
            <div class="card">
                <div class="card-header">Fatura Ekle</div>
                <div class="card-body">
                    <form action="" method="post">
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Fatura No</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="InvoiceNo" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Ad Soyad</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="NameSurname" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">TC Kimlik Numarası</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="Tc" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" maxlength="11" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Abone No</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="SubscriberNo" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Adres</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="Address">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Fatura Tipi</label>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="InvoiceType" id="flexRadioDefault1" value="1" checked>
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Bireysel
                                </label>
                            </div>
                            <div class="form-check ml-3">
                                <input class="form-check-input" type="radio" name="InvoiceType" id="flexRadioDefault2" value="2">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Kurumsal
                                </label>
                            </div>


                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Tutar</label>
                            <div class="col-md-6">
                                <input type="number" class="form-control" name="Price" min="0.00" max="10000.00" step="0.01" required>
                            </div>
                        </div>


                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
